<Window x:Class="CPUMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPUMonitor"
        mc:Ignorable="d"
        Title="CPUMonitor" Height="98" Width="394" ResizeMode="CanMinimize">

    <Window.FontSize>15</Window.FontSize>
    <Window.FontFamily>Comic Sans MS</Window.FontFamily>


    <Grid>
        <StackPanel>
            <Label x:Name="cpu" Content="CPU Usage:"/>
            <StackPanel Orientation="Horizontal">
                <Label x:Name="mUsage" Content="Memory Usage:"/>
                <Label x:Name="mRemain" Content="Memory Remain:" Padding="40,0" VerticalContentAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
